<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="10dp"
    android:background="@drawable/content_panel">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="28sp"
            android:text="Thanks For Confirming!"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/confirmation_prompt_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="15sp"
            android:text="Thanks For Telling Us When You Are In"/>
        <LinearLayout
            android:id="@+id/prompt_leaves_alert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/leaf_logo_prompt"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circle_fine"
                android:layout_gravity="center"
                android:src="@mipmap/green_leaf"/>
            <TextView
                android:id="@+id/prompt_plus_sign"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="3dp"
                android:text="+"
                android:textColor="@color/darkestGreen"/>
            <TextView
                android:id="@+id/prompt_plus_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="30sp"
                android:gravity="center"
                android:padding="3dp"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/darkestGreen"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center">
        <TextView
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:textStyle="bold"
            android:text="Remember you can still change what days you will be in, so let us know! "/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_return_prompt"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/button"
            android:text="@string/return_string_login"/>
    </LinearLayout>
</LinearLayout>