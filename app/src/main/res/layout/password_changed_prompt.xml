        <!--android:id="@+id/new_user_email"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textSize="18sp"-->
        <!--android:textStyle="bold"-->
        <!--android:layout_gravity="center"-->
        <!--android:text="updated@email.com"/>-->
        <LinearLayout
            android:id="@+id/prompt_leaves_alert"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/leaf_logo_prompt"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center"
                android:src="@mipmap/outline_phonelink_lock_black_48"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1">
        <Button
            android:id="@+id/button_return_prompt"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/button"
            android:text="@string/return_string_login"/>
    </LinearLayout>
</LinearLayout>